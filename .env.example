# Apify Configuration
APIFY_TOKEN=apify_api_YOUR_TOKEN_HERE
APIFY_ACTOR_ID=clockworks/tiktok-profile-scraper

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tiktok_scraper?retryWrites=true&w=majority

# Scraper Settings
PROFILE_HANDLE=success_israel
MAX_POSTS=50
TIMEZONE=Asia/Jerusalem
# Note: System automatically collects videos from yesterday (00:00-23:59)

# System Settings
NODE_ENV=production
LOG_LEVEL=info
BACKUP_RETENTION_DAYS=14

# Optional: Run immediately on startup (for testing)
# RUN_ON_STARTUP=true

# Future: Email Alerts (optional)
# ALERT_EMAIL=team@example.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
